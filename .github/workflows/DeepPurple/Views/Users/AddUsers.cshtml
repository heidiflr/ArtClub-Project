@model AddUserViewModel

@{ 

    ViewData["Title"] = "AddUser";
}

<form class="p-5 bg-light" asp-controller="User" asp-action="AddUser" method="post">
    <div class="section-title">
        <h2 class="mb-5">Add New Resource</h2>
    </div>

    <div class="form-group">
        <label for="message">Resource Name</label>
        <input type="text" class="form-control form-control-lg" asp-for="Username" />
    </div>
    <div class="form-group">
        <label for="message">Resource Description</label>
        <input type="text" class="form-control form-control-lg" asp-for="Email" />
    </div>
    <div class="form-group">
        <label for="message">Resource Price</label>
        <input type="checkbox" class="form-control form-control-lg" asp-for="Member" />
    </div>
    <div class="form-group">
        <a href="Users.cshtml"><input type="submit" value="Add User" ></a>
    </div>

</form>