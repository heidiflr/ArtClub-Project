@model AddResourceViewModel

@{ 

    ViewData["Title"] = "AddResource";
}

<form class="p-5 bg-light" asp-controller="Resources" asp-action="AddResource" method="post">
    <div class="section-title">
        <h2 class="mb-5">Add New Resource</h2>
    </div>

    <div class="form-group">
        <label for="message">Resource Name</label>
        <input type="text" class="form-control form-control-lg" asp-for="ResourceName" />
    </div>
    <div class="form-group">
        <label for="message">Resource Description</label>
        <input type="text" class="form-control form-control-lg" asp-for="ResDescription" />
    </div>
    <div class="form-group">
        <label for="message">Resource Price</label>
        <input type="number" class="form-control form-control-lg" asp-for="ResPrice" />
    </div>
    <div class="form-group">
        <a href="Resources.cshtml"><input type="submit" value="Add Resource" class="btn btn-primary py-3"></a>
    </div>

</form>